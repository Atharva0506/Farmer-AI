generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum Role {
  FARMER
  BUYER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  phone         String?   @unique
  role          Role      @default(FARMER)
  location      String?   // JSON string or simpler "{lat, lng}"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  chats         Chat[]
  listings      Listing[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Chat {
  id        String   @id @default(cuid())
  userId    String
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messages  Message[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  role      String   // 'user' or 'system' or 'assistant'
  content   String   @db.Text
  createdAt DateTime @default(now())

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
}

// ─── Caching ────────────────────────────────
model CachedResponse {
  id        String   @id @default(cuid())
  cacheKey  String   @unique
  response  String   @db.Text // JSON stringified
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([cacheKey])
  @@index([expiresAt])
}

// ─── API Usage Logging ──────────────────────
model ApiUsageLog {
  id               String   @id @default(cuid())
  route            String
  promptTokens     Int      @default(0)
  completionTokens Int      @default(0)
  totalTokens      Int      @default(0)
  model            String   @default("gemini-2.5-flash")
  cached           Boolean  @default(false)
  durationMs       Int      @default(0)
  createdAt        DateTime @default(now())

  @@index([route])
  @@index([createdAt])
}

// ─── Marketplace Listings ───────────────────
enum ListingStatus {
  ACTIVE
  SOLD
  EXPIRED
}

model Listing {
  id           String        @id @default(cuid())
  userId       String
  cropName     String
  quantity     String
  unit         String        @default("kg")
  pricePerUnit Float
  location     String?       // JSON string "{lat, lng, address}"
  imageUrl     String?
  description  String?
  status       ListingStatus @default(ACTIVE)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([cropName])
  @@index([userId])
}
