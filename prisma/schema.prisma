generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String          @id @default(cuid())
  name           String?
  phone          String?         @unique
  role           Role            @default(FARMER)
  location       String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  crops          String[]        @default([])
  incomeRange    String?
  landSizeAcres  Float?
  onboarded      Boolean         @default(false)
  state          String?
  accounts       Account[]
  chats          Chat[]
  diseaseReports DiseaseReport[]
  listings       Listing[]
  sessions       Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Chat {
  id        String    @id @default(cuid())
  userId    String
  title     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  role      String
  content   String
  createdAt DateTime @default(now())
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
}

model CachedResponse {
  id        String   @id @default(cuid())
  cacheKey  String   @unique
  response  String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([cacheKey])
  @@index([expiresAt])
}

model ApiUsageLog {
  id               String   @id @default(cuid())
  route            String
  promptTokens     Int      @default(0)
  completionTokens Int      @default(0)
  totalTokens      Int      @default(0)
  model            String   @default("gemini-2.5-flash")
  cached           Boolean  @default(false)
  durationMs       Int      @default(0)
  createdAt        DateTime @default(now())

  @@index([route])
  @@index([createdAt])
}

model Listing {
  id           String        @id @default(cuid())
  userId       String
  cropName     String
  quantity     String
  unit         String        @default("kg")
  pricePerUnit Float
  location     String?
  imageUrl     String?
  description  String?
  status       ListingStatus @default(ACTIVE)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([cropName])
  @@index([userId])
}

model DiseaseReport {
  id         String   @id @default(cuid())
  userId     String
  cropName   String
  disease    String
  severity   String
  confidence Float    @default(0)
  treatments String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

enum Role {
  FARMER
  BUYER
}

enum ListingStatus {
  ACTIVE
  SOLD
  EXPIRED
}
